<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="CriticalPointTracker2D" class="ftkCriticalPointTracker2D" label="CriticalPointTracker2D">
      <Documentation
         short_help="track critical points in 2D time-varying scalar field data"
         long_help="track critical points in 2D time-varying scalar field data">
      </Documentation>
      
      <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkImageData"/>
        </DataTypeDomain>
      </InputProperty>

      <StringVectorProperty 
        name="InputVariable"
        command="SetInputVariable"
        number_of_elements="1"
        animateable="1">
        <ArrayListDomain name="array_list"
          attribute_type="Scalars"
          input_domain_name="inputs_array">
          <RequiredProperties>
            <Property name="Input"
              function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
      </StringVectorProperty>

      <!---
      <IntVectorProperty 
        name="UseGPU"
        command="SetUseGPU"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool"/>
      </IntVectorProperty>

      <DoubleVectorProperty
        name="GaussianKernelSize"
        command="SetGaussianKernelSize"
        number_of_elements="1"
        default_values="2.0"
        animateable="0">
      </DoubleVectorProperty>
      -->
      
      <DoubleVectorProperty
        name="Z-time scale"
        command="SetZTimeScale"
        number_of_elements="1"
        default_values="0.0"
        animateable="0">
      </DoubleVectorProperty>

      <Hints>
        <ShowInMenu category="FTK"/>
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
